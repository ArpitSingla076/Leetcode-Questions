class Solution {
    public int largestAltitude(int[] gain) {
        int n = gain.length;
      int maxaltitude = 0;
      int altitude = 0;
      for(int i=0;i<n;i++) {
        altitude = altitude + gain[i];
       maxaltitude = Math.max(altitude , maxaltitude);
      }
      return maxaltitude;
    }
}
