class Solution {
    public void moveZeroes(int[] nums) {
        int n = nums.length;
        int index = 0;

        // firstly Move all non-zeros forward
        for (int i=0;i<n;i++) {
            if (nums[i]!=0) {
                nums[index] = nums[i];
                index++;
            }
        }

        // at last Fill remaining places with 0
        while (index<n) {
            nums[index] = 0;
            index++;
        }
    }
}
